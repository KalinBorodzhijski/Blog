<%- include("partials/header") %>

<div class="ui main container text">
    <div class="ui huge header"><%= article.title%></div>
    <div class = "ui top attacher segment">
        <div class="item">
            <img src="<%= article.image%>" class = "ui centered rounded image">
            <div class="content">
                <span><%= article.created.toDateString() %></span>
            </div>
            <div class="description">
                 <p><%- article.body%></p>
            </div>
        </div>
        
        <a href="/blogs/<%= article._id %>/edit" class="ui green basic button">Edit</a>
        <form action="/blogs/<%= article._id%>?_method=DELETE" method="post" id="delete">
            <button class="ui red basic button">Delete</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>