<%- include("partials/header") %>


<div class="ui main container text segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Blog Title</label>
            <input type="text" name = "title" placeholder="Enter title"required>
        </div>
        <div class="field">
            <label>Photo URL</label>
            <input type="text" name = "image" placeholder="Photo URL">
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea name="body" cols="30" rows="10"required></textarea>
        </div>
        <button class="ui green basic button">Submit</button>
    
    </form>
</div>


